						<configuration>
							<file>${basedir}/libs/org.franca.deploymodel.dsl-0.8.7.jar</file>
							<groupId>org.franca</groupId>
							<artifactId>org.franca.deploymodel.dsl</artifactId>
							<version>0.8.7</version>
							<packaging>jar</packaging>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
